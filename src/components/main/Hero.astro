---
import { Image } from 'astro:assets';
import bg from '../../assets/hero-bg.webp';
import coffee from '../../assets/coffee-go.webp';
import coke from '../../assets/coke-glass.webp';
import pizza from '../../assets/food/pizza.webp';
import gulas from '../../assets/food/gulas.webp';
import CTA2 from '../cta/CTA2.astro';
---

<section class='hero'>
  <Image src={bg} class='hero-img' alt='Placeholder Image' />
  <div class='text'>
    <h1>Stari Vajat</h1>
    <h2>Ukus domaće kuhinje na dohvat ruke</h2>
    <CTA2 />
  </div>

  <div class='presentation'>
    <img src='/img/icons/tray.svg' class='tray top' alt='' />
    <Image src={pizza} class='plate pizza' alt='stari vajat pica' />
    <div class='description' id='top'>
      <p class='headline'>Pica "Vajat"</p>
      <p class='note'>pelat, kačkavalj, šunka, pršuta, kulen, pečurke, pavlaka, masline, origano, rukola</p>
    </div>
    <Image src={coke} class='drink coke' alt='koka kola' />
    <img src='/img/icons/tray.svg' class='tray bottom' alt='' />
    <Image src={gulas} class='plate gulas' alt='juneći gulaš u tanjiru' />
    <div class='description' id='bottom'>
      <p class='headline'>Kuvana Jela</p>
      <p class='note'>Juneći gulaš, Ćufte u paradajz sosu, Pasulj sa rebrima i slaninom i dr.</p>
    </div>
    <Image src={coffee} class='drink coffee' alt='espreso kafa' />
  </div>

  <style>
    .hero {
      width: 100%;
      display: flex;
      min-height: 100svh;
      overflow: hidden;
    }

    .hero-img {
      width: 100%;
      height: 100%;
      opacity: 40%;
      object-fit: cover;
      position: absolute;
      z-index: 1;
    }

    :not(.hero-img) {
      z-index: 2;
    }

    .text {
      padding: var(--x-spacing-desktop);
      padding-top: 150px;
    }

    h2 {
      font-size: var(--fs-500);
      font-weight: 500;
      margin-top: 0;
    }

    .tray {
      position: absolute;
      z-index: 3;
      width: 1100px;
    }

    .tray.top {
      right: -18em;
      top: -20em;
      /* display: none; */
      animation: slideInTopRight 2s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
    }

    .tray.bottom {
      right: 30em;
      top: 35em;
      animation: slideInBottomLeft 2s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
    }

    @keyframes slideInTopRight {
      from {
        transform: rotate(180deg) translate(-100%, 100%);
      }
      to {
        transform: rotate(180deg) translate(0, 0);
      }
    }

    @keyframes slideInBottomLeft {
      from {
        transform: translate(-100%, 100%);
      }
      to {
        transform: translate(0, 0);
      }
    }

    @keyframes slideInPizza {
      from {
        transform: translate(300%, -300%);
        visibility: hidden;
      }
      to {
        transform: translate(0, 0);
        visibility: visible;
      }
    }

    @keyframes slideIngulas {
      from {
        transform: translate(-300%, 300%);
        visibility: hidden;
      }
      to {
        transform: translate(0, 0);
        visibility: visible;
      }
    }

    .plate {
      position: absolute;
      z-index: 3;
      width: 23rem;
      height: auto;
      filter: drop-shadow(25px 25px 15px rgba(0, 0, 0, 0.7));
    }

    .pizza {
      right: 29em;
      top: 9em;
      visibility: hidden;
      animation: 2s slideInPizza 0.7s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
    }

    .gulas {
      right: 29em;
      top: 32em;
      visibility: hidden;
      animation: 2s slideIngulas 0.7s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
    }

    .drink {
      position: absolute !important;
      z-index: 3;
      opacity: 0;
    }

    .coke {
      right: 14em;
      top: 16em;
      height: auto;
      animation: fadeInRight 1.5s cubic-bezier(0.22, 0.61, 0.36, 1) 1.3s forwards;
    }

    .coffee {
      right: 47em;
      top: 26em;
      width: 11rem;
      height: auto;
      z-index: 2;
      animation: fadeInLeft 1.5s cubic-bezier(0.22, 0.61, 0.36, 1) 1.3s forwards;
    }

    .description {
      position: absolute;
      opacity: 0;
      z-index: 10;
      transform: rotate(327deg);
      width: 250px;
      text-align: center;
      animation: fadeIn 1.5s cubic-bezier(0.22, 0.61, 0.36, 1) 2.3s forwards;
    }

    .description#top {
      top: 2em;
      right: 15em;
    }

    .description#bottom {
      top: 45em;
      right: 47.5em;
    }

    .headline {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text-200);
    }

    .note {
      color: var(--text-300);
      font-size: 1.5rem;
      font-family: 'Sofia Sans Extra Condensed Variable', sans-serif;
    }

    @keyframes fadeInRight {
      from {
        opacity: 0;
        transform: translateX(100px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
    @keyframes fadeInLeft {
      from {
        opacity: 0;
        transform: translateX(-100px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

