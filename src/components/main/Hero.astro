---
import { Image } from 'astro:assets';
import bg from '../../assets/hero-bg.webp';
import coffee from '../../assets/coffee-go.webp';
import coke from '../../assets/coke-glass.webp';
import pizza from '../../assets/food/pizza.webp';
import pancaces from '../../assets/food/pancaces-plate.webp';
import gulas from '../../assets/food/gulas.webp';
---

<section class='hero'>
  <Image src={bg} class='hero-img' alt='Placeholder Image' />
  <div class='text'>
    <h1>Stari Vajat</h1>
    <h2></h2>
  </div>
  <div class='presentation'>
    <img src='/img/icons/tray.svg' class='tray top' alt='' />
    <Image src={pizza} class='plate pizza' alt='stari vajat pica' />
    <div class='description' id='top'>
      <p class='headline'>Pica "Vajat"</p>
      <p class='note'>pelat, kačkavalj, šunka, pršuta, kulen, pečurke, pavlaka, masline, origano, rukola</p>
    </div>
    <Image src={coke} class='drink coke' alt='koka kola' />
    <img src='/img/icons/tray.svg' class='tray bottom' alt='' />
    <Image src={pancaces} class='plate pancaces' alt='stari vajat palačinke' />
    <div class='description' id='bottom'>
      <p class='headline'>Palačinke "Slatki Vajat"</p>
      <p class='note'>eurokrem, čokoladna bananica, boni bone, cream rolls, šlag, plazma, čoko preliv</p>
    </div>
    <Image src={coffee} class='drink coffee' alt='espreso kafa' />
  </div>
</section>

<style>
  .hero {
    width: 100%;
    display: flex;
    min-height: 100vh;
    overflow-x: hidden;
  }

  .hero-img {
    width: 100%;
    height: 100%;
    opacity: 40%;
    object-fit: cover;
    position: absolute;
    z-index: 1;
  }

  :not(.hero-img) {
    z-index: 2;
  }

  .text {
    padding-left: var(--x-spacing-desktop);
    padding-top: 150px;
  }

  .presentation {
    width: 300px;
    height: 550px;
  }

  .tray {
    position: absolute;
    z-index: 3;
    width: 1100px;
  }

  .tray.top {
    /* transform: rotate(180deg); */
    right: -18em;
    top: -20em;
    animation: slideInTopRight 2s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
  }

  .tray.bottom {
    right: 30em;
    bottom: -20em;
    animation: slideInBottomLeft 2s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
  }

  @keyframes slideInTopRight {
    from {
      transform: rotate(180deg) translate(-100%, 100%);
    }
    to {
      transform: rotate(180deg) translate(0, 0);
    }
  }

  @keyframes slideInBottomLeft {
    from {
      transform: translate(-100%, 100%);
    }
    to {
      transform: translate(0, 0);
    }
  }

  @keyframes slideInPizza {
    from {
      transform: translate(300%, -300%);
      visibility: hidden;
    }
    to {
      transform: translate(0, 0);
      visibility: visible;
    }
  }

  @keyframes slideInPancaces {
    from {
      transform: translate(-300%, 300%);
      visibility: hidden;
    }
    to {
      transform: translate(0, 0);
      visibility: visible;
    }
  }

  .plate {
    position: absolute;
    z-index: 3;
    width: 23rem;
    height: auto;
    filter: drop-shadow(25px 25px 15px rgba(0, 0, 0, 0.7));
  }

  .pizza {
    right: 29em;
    top: 9em;
    visibility: hidden;
    animation: 2s slideInPizza 0.7s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
  }

  .pancaces {
    right: 29em;
    top: 32em;
    visibility: hidden;
    animation: 2s slideInPancaces 0.7s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
  }

  .drink {
    position: absolute !important;
    z-index: 5;
    opacity: 0;
  }

  .coke {
    right: 14em;
    top: 16em;
    animation: fadeInRight 1.5s cubic-bezier(0.22, 0.61, 0.36, 1) 1.3s forwards;
  }

  .coffee {
    right: 47em;
    top: 26em;
    width: 11rem;
    height: auto;
    z-index: 2;
    animation: fadeInLeft 1.5s cubic-bezier(0.22, 0.61, 0.36, 1) 1.3s forwards;
  }

  .description {
    position: absolute;
    opacity: 0;
    z-index: 10;
    transform: rotate(327deg);
    width: 250px;
    text-align: center;
    animation: fadeIn 1.5s cubic-bezier(0.22, 0.61, 0.36, 1) 2.3s forwards;
  }

  .description#top {
    top: 4.5em;
    right: 16em;
  }

  .description#bottom {
    top: 47em;
    right: 47em;
  }

  .headline {
    font-size: var(--fs-300);
    font-weight: 600;
    color: var(--text-100);
  }

  .note {
    color: var(--text-300);
    font-size: var(--fs-100);
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (max-width: 1800px) {
    .plate {
      width: calc(current * 0.8);
    }
  }
</style>
