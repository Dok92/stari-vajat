---
import { Image } from 'astro:assets';
import img1 from '../assets/gallery/1.webp';
import img2 from '../assets/gallery/2.webp';
import img3 from '../assets/gallery/3.webp';
import img4 from '../assets/gallery/4.webp';
import img5 from '../assets/gallery/5.webp';
import img6 from '../assets/gallery/6.webp';
import img7 from '../assets/gallery/7.webp';
import img8 from '../assets/gallery/8.webp';
import img9 from '../assets/gallery/9.webp';
import img10 from '../assets/gallery/10.webp';

import SectionsDescriptor from '../sections/SectionsDescriptor.astro';
import AnimateOnScroll from '../../animations/AnimateOnScroll.astro';
---

<section class='gallery'>
  <SectionsDescriptor headline='Galerija' />
  <AnimateOnScroll animation='down-slide' duration={1} delay={0}>
    <div class='section-heading'>
      <h2>Test</h2>
      <p>test</p>
    </div>
  </AnimateOnScroll>
  <div class='gallery-images'>
    <div class='img-item'>
      <Image src={img1} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img2} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img3} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img4} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img5} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img6} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img7} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img8} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img9} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img10} alt='' class='imgs' loading='lazy' />
    </div>
  </div>
</section>

<style>
  .section-heading {
    margin-bottom: var(--space-600);
  }

  .section-heading p {
    max-width: 800px;
  }

  .gallery-images {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-400);
    justify-content: space-between;
    row-gap: var(--space-700);
  }
  .img-item {
    flex: 1 1 30%;
    max-width: 30%;
    border-radius: var(--rounded-3xl);
    overflow: hidden;
  }

  .img-item img {
    width: 100%;
    height: auto;
    border-radius: inherit;
    transition: transform 0.3s ease-in-out;
  }

  .img-item:hover img {
    transform: scale(1.3);
  }

  @media (max-width: 1400px) {
    .gallery-images {
      row-gap: var(--space-400);
    }
    .img-item {
      flex: 1 1 40%;
      max-width: 50%;
    }
  }

  @media (max-width: 768px) {
    .section-heading p {
      max-width: 100%;
    }
    .img-item {
      flex: 1 1 100%;
      max-width: 100%;
    }
  }
</style>
