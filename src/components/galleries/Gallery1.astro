import img8 from '../../assets/gallery/gallery-8.webp';
import img9 from '../../assets/gallery/gallery-9.webp';
import img10 from '../../assets/gallery/gallery-10.webp';

import AnimateOnScroll from '../../animations/AnimateOnScroll.astro';
---

<section class='gallery'>
  <AnimateOnScroll animation='up-slide' duration={1} delay={0}>
    <div class='section-heading'>
      <h2>Deo na≈°e ponude</h2>
      <!-- <p>test</p> -->
    </div>
  </AnimateOnScroll>
  <div class='gallery-images'>
    <div class='img-item'>
      <Image src={img4} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img5} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img6} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img7} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img8} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img9} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img10} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img1} alt='' class='imgs' loading='lazy' />
    </div>
    <div class='img-item'>
      <Image src={img2} alt='' class='imgs' loading='lazy' />
    </div>
    <!-- <div class='img-item'>
      <Image src={img3} alt='' class='imgs' loading='lazy' />
    </div> -->
  </div>
</section>

<style>
  .gallery {
    padding: 0 var(--x-spacing-desktop) var(--y-spacing-tablet) var(--x-spacing-desktop);
  }
  .section-heading {
    margin-bottom: var(--space-600);
  }

  .section-heading p {
    max-width: 800px;
  }

  .gallery-images {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-400);
    justify-content: space-between;
    row-gap: var(--space-700);
  }
  .img-item {
    flex: 1 1 30%;
    max-width: 30%;
    height: max-content;
    border-radius: var(--rounded-3xl);
    overflow: hidden;
  }

  .img-item img {
    width: 100%;
    height: auto;
    border-radius: inherit;
    transition: transform 0.3s ease-in-out;
  }

  .img-item:hover img {
    transform: scale(1.2);
  }

  @media (max-width: 1400px) {
    .gallery-images {
      row-gap: var(--space-400);
    }
    .img-item {
      flex: 1 1 40%;
      max-width: 50%;
    }
  }

  @media (max-width: 768px) {
    .gallery {
      padding: 0 var(--x-spacing-mobile) var(--y-spacing-mobile) var(--x-spacing-mobile);
    }
    .section-heading p {
      max-width: 100%;
    }
    .img-item {
      flex: 1 1 100%;
      max-width: 100%;
    }
  }
</style>
